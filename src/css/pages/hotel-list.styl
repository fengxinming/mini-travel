page
  background #fff
  .search-header
    width 100%
    height px2rpx(96px)
    padding px2rpx(10px)
    box-sizing border-box
    box-shadow 0 2px 4px 0 rgba(59,79,98,0.04)
    .date
      width px2rpx(150px)
      height px2rpx(76px)
      float left
      border-radius px2rpx(4px)
      background rgba(191,195,205,0.15)
      display flex
      padding px2rpx(10px) px2rpx(20px)
      box-sizing border-box
      .left
        flex 2
        text
          display block
          height px2rpx(30px)
          line-height @height
          font-size px2rpx(22px)
          color #bfc3cd
      .right
        flex 1
        font-size px2rpx(22px)
        color #3B4F62
        line-height px2rpx(56px)
    .search-bar
      width px2rpx(560px)
      height px2rpx(76px)
      float right